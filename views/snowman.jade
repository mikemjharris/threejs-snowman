extends layout

block content
  div(id="canvas-view")
  div(class='controls')
    div(class='start')
      h2 Snowball Fight!
      label Enter your name to join
      input(type='text' id='player-name')
    div(class="regenerate")
      h2 You got shot! Click the button to rejoin
    div(id='join-game') Join Game!
  div(class='info')
    h3 Players
    table(id='players')
      th Name
      th W
      th L
  div(id='message')
  div(id='power')
  div(id='last-power')
  div(class='scores')
    h2 Time
    div(class='dashboard' id='time') 0
    h2 Counter
    div(class='dashboard' id='counter') 0
    h2 Distance
    div(class='dashboard' id='dist') 0
    h2 Score
    div(class='dashboard' id='score') 0


  script(src="../javascripts/structures.js")
  script(src="../javascripts/controls.js")
  script(src="../javascripts/explosion.js")
  script(src="../javascripts/snowball.js")
  script(src="../javascripts/player.js")
  script(src="../javascripts/camera.js")
  script(src="../javascripts/game.js")
  script(src="../javascripts/snowman_game.js")
